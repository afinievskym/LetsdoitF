<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/objective"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="Что вы хотите?" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="Какую роль в жизни вы ей отводите?" />

        <RadioGroup
            android:id="@+id/rg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rblow_ob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Вспомогательная" />

            <RadioButton
                android:id="@+id/rbmedium_ob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Важная" />

            <RadioButton
                android:id="@+id/rbhard_ob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Главная" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="132dp"
            android:text="Давайте приблизительно укажем временные рамки  " />

        <EditText
            android:id="@+id/years_ob"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView2"
            android:hint="Years"
            android:layout_marginTop="168dp" />

        <EditText
            android:id="@+id/months_ob"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="168dp"
            android:hint="Months"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/days_ob"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="168dp"
            android:hint="Days"
            android:layout_alignRight="@+id/textView2"
            />

        <EditText
            android:id="@+id/motiv_ob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:hint="Добавьте сюда что-нибудь мотивирующее"
            android:layout_marginBottom="219dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_action_ob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Отмена"
                android:textColor="#000000"
                android:textSize="15sp" />


            <Button
                android:id="@+id/add_ob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Добавить"
                android:textColor="#000000"
                android:textSize="15sp" />


        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
